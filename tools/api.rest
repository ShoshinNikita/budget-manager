// -------------------------------------------------
// Spend
// -------------------------------------------------

### Add Spend

POST {{baseUrl}}/api/spends
Content-Type: application/json

{
	"day_id": {{dayID}},
	"title": "Mechanical keyboard",
	"notes": "On sales",
	"type_id": 1,
	"cost": 4105
}

// -------------------------------------------------
// Month
// -------------------------------------------------

### Get Month by Id

GET {{baseUrl}}/api/months
Content-Type: application/json

{
	"id": 1
}

### Get Month by year and month

GET {{baseUrl}}/api/months
Content-Type: application/json

{
	"year": {{currentYear}},
	"month": {{currentMonth}}
}

// -------------------------------------------------
// Day
// -------------------------------------------------

### Get Day by ID

GET {{baseUrl}}/api/days
Content-Type: application/json

{
	"id": {{dayID}}
}

### Get Day by date

GET {{baseUrl}}/api/days
Content-Type: application/json

{
	"year": {{currentYear}},
	"month": {{currentMonth}},
	"day": {{dayNumber}}
}
