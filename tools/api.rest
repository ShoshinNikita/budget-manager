@schema = http
@host = localhost
@port = 8080
@baseUrl = {{schema}}://{{host}}:{{port}}
@currentYear = {{$datetime "YYYY"}}
@currentMonth = {{$datetime "M"}}
@dayID = 11
@dayNumber = 11

// -------------------------------------------------
// Incomes
// -------------------------------------------------

### Add income

POST {{baseUrl}}/api/incomes
Content-Type: application/json

{
	"month_id": 1,
	"title": "Salary",
	"income": 60000
}

